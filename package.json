{
  "name": "dismoi-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "start": "react-native start",
    "applyKtlintRulesToAndroidStudio": "cd android && ./gradlew ktlintApplyToIdea",
    "lintJavascript": "eslint '**/*.js'",
    "lintKotlin": "cd android && ./gradlew removeUnusedResources && ./gradlew ktlintFormat && ./gradlew ktlintCheck && ./gradlew app:compileDebugKotlin",
    "prettier": "prettier --write '**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lintKotlin"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "yarn prettier",
      "yarn lintJavascript"
    ]
  },
  "dependencies": {
    "react": "16.13.1",
    "react-native": "0.63.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.20.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "metro-react-native-babel-preset": "^0.65.0",
    "prettier": "2.2.1",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  }
}
