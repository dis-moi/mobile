<?xml version="1.0" encoding="utf-8"?>
<com.dismoi.scout.Floating.Layout.Message
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
>
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
    >
    <ImageView
      android:src="@drawable/profile"
      android:layout_width="38dp"
      android:layout_marginTop="8dp"
      android:layout_height="38dp"
      android:layout_gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/dismoi_logo_description" />


    <LinearLayout
      android:layout_width="340dp"
      android:layout_height="match_parent"
      android:background="@drawable/bgkconten"
      android:orientation="vertical"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintHorizontal_bias="0.49"
    >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scout_name"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#343434"
      />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/dis_moi_message_content"
        android:textSize="16sp"
        android:textColor="#343434"
      />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
    >
    <ImageButton
      android:id="@+id/close"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:layout_gravity="end|top"
      android:contentDescription="@string/close_dis_moi_content_message_button"
      android:src="@drawable/close" />
      </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.dismoi.scout.Floating.Layout.Message>